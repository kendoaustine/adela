{
  "name": "gasconnect-backend",
  "version": "1.0.0",
  "description": "GasConnect unified gas supply platform backend with 3-microservice architecture",
  "main": "index.js",
  "scripts": {
    "dev": "docker-compose up -d",
    "dev:logs": "docker-compose logs -f",
    "dev:down": "docker-compose down",
    "dev:clean": "docker-compose down -v --remove-orphans",
    "build": "docker-compose build",
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "restart": "docker-compose restart",
    "logs": "docker-compose logs -f",
    "logs:auth": "docker-compose logs -f auth-service",
    "logs:orders": "docker-compose logs -f orders-service",
    "logs:supplier": "docker-compose logs -f supplier-service",
    "logs:nginx": "docker-compose logs -f nginx",
    "test": "npm run test:auth && npm run test:orders && npm run test:supplier",
    "test:auth": "cd services/auth-service && npm test",
    "test:orders": "cd services/orders-service && npm test",
    "test:supplier": "cd services/supplier-service && npm test",
    "migrate": "npm run migrate:auth && npm run migrate:orders && npm run migrate:supplier",
    "migrate:auth": "cd services/auth-service && npm run migrate",
    "migrate:orders": "cd services/orders-service && npm run migrate",
    "migrate:supplier": "cd services/supplier-service && npm run migrate",
    "seed": "npm run seed:auth && npm run seed:orders && npm run seed:supplier",
    "seed:auth": "cd services/auth-service && npm run seed",
    "seed:orders": "cd services/orders-service && npm run seed",
    "seed:supplier": "cd services/supplier-service && npm run seed",
    "lint": "npm run lint:auth && npm run lint:orders && npm run lint:supplier",
    "lint:auth": "cd services/auth-service && npm run lint",
    "lint:orders": "cd services/orders-service && npm run lint",
    "lint:supplier": "cd services/supplier-service && npm run lint",
    "format": "npm run format:auth && npm run format:orders && npm run format:supplier",
    "format:auth": "cd services/auth-service && npm run format",
    "format:orders": "cd services/orders-service && npm run format",
    "format:supplier": "cd services/supplier-service && npm run format",
    "health": "curl -f http://localhost/health && curl -f http://localhost:3001/health && curl -f http://localhost:3002/health && curl -f http://localhost:3003/health",
    "setup": "cp .env.example .env && npm run build && npm run migrate && npm run seed",
    "test": "jest",
    "test:e2e": "jest tests/e2e --runInBand --detectOpenHandles --forceExit",
    "test:e2e:household": "jest tests/e2e/household-user-journey.test.js --detectOpenHandles --forceExit",
    "test:e2e:supplier": "jest tests/e2e/supplier-user-journey.test.js --detectOpenHandles --forceExit",
    "test:e2e:admin": "jest tests/e2e/admin-user-journey.test.js --detectOpenHandles --forceExit",
    "test:e2e:monitoring": "jest tests/e2e/monitoring-integration.test.js --detectOpenHandles --forceExit",
    "test:infrastructure": "jest tests/e2e/infrastructure.test.js --detectOpenHandles --forceExit",
    "test:comprehensive": "./scripts/e2e-test-runner.sh",
    "test:ssl": "./scripts/test-ssl-functionality.sh"
  },
  "keywords": [
    "gas-supply",
    "microservices",
    "nodejs",
    "postgresql",
    "redis",
    "rabbitmq",
    "docker",
    "api-gateway",
    "healthcare",
    "industrial",
    "household"
  ],
  "author": "GasConnect Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "axios": "^1.6.0",
    "@types/jest": "^29.5.8",
    "jest-environment-node": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gasconnect/backend.git"
  },
  "bugs": {
    "url": "https://github.com/gasconnect/backend/issues"
  },
  "homepage": "https://github.com/gasconnect/backend#readme"
}
